{
    "mappings" : [
        {
            "name" : "fiddles_hosts",
            "source" : "system/fiddles/schema_defs",
            "target" : "system/hosts/databases",
            "sourceQuery" : {
                "queryFilter" : "context eq \"host\" and minutes_since_last_used lt 30"
            },
            "allowEmptySourceSet" : true,
            "validSource" : {
                "type" : "text/javascript",
                "source" : "source.minutes_since_last_used < 30"
            },
            "correlationQuery" : {
                "type" : "text/javascript",
                "source" : "var qry = { '_queryFilter': 'schema_name eq \"db_' + source.db_type_id + '_' + source.short_code + '\"'}; qry;"
            },
            "properties" : [
                {
                    "source" : "db_type_id",
                    "target" : "db_type_id"
                },
                {
                    "source" : "",
                    "transform" : {
                        "type" : "text/javascript",
                        "source" : "'db_' + source.db_type_id + '_' + source.short_code"
                    },
                    "target" : "schema_name"
                },
                {
                    "source" : "",
                    "transform" : {
                        "type" : "text/javascript",
                        "source" : "'user_' + source.db_type_id + '_' + source.short_code"
                    },
                    "target" : "username"
                },
                {
                    "source" : "",
                    "transform" : {
                        "type" : "text/javascript",
                        "source" : "source.db_type_id + '_' + source.short_code"
                    },
                    "target" : "pw"
                },
                {
                    "source" : "ddl",
                    "target" : "ddl"
                },
                {
                    "source" : "statement_separator",
                    "target" : "statement_separator"
                }
            ],
            "policies" : [
                {
                    "situation" : "CONFIRMED",
                    "action" : "IGNORE"
                },
                {
                    "situation" : "FOUND",
                    "action" : "LINK"
                },
                {
                    "situation" : "ABSENT",
                    "action" : "CREATE"
                },
                {
                    "situation" : "MISSING",
                    "action" : "CREATE"
                },
                {
                    "situation" : "SOURCE_MISSING",
                    "action" : "DELETE"
                },
                {
                    "situation" : "UNASSIGNED",
                    "action" : "DELETE"
                },
                {
                    "situation" : "UNQUALIFIED",
                    "action" : "DELETE"
                }
            ]
        },
		{
            "name" : "systemHrdb_managedUser",
            "source" : "system/fiddles/users",
            "target" : "managed/user",
            "properties" : [
                {
                    "source" : "_id",
                    "target" : "_id"
                },
                {
                    "source" : "issuer",
                    "target" : "issuer"
                },
                {
                    "source" : "subject",
                    "target" : "subject"
                },
                {
                    "source" : "email",
                    "target" : "email"
                },
                {
                    "source" : "dt_started_access",
                    "target" : "dt_started_access"
                },
                {
                    "source" : "dt_ended_access",
                    "target" : "dt_ended_access"
                }
            ],
            "policies" : [
                {
                    "situation" : "CONFIRMED",
                    "action" : "UPDATE"
                },
                {
                    "situation" : "FOUND",
                    "action" : "UPDATE"
                },
                {
                    "situation" : "ABSENT",
                    "action" : "CREATE"
                },
                {
                    "situation" : "AMBIGUOUS",
                    "action" : "EXCEPTION"
                },
                {
                    "situation" : "MISSING",
                    "action" : "UNLINK"
                },
                {
                    "situation" : "SOURCE_MISSING",
                    "action" : "DELETE"
                },
                {
                    "situation" : "UNQUALIFIED",
